<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settings" android:orientation="vertical" android:padding="5dp"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	
	<TextView android:id="@+id/textPrincipal" android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="Preferencias:" android:textSize="23sp"
		android:textColor="@color/titlecolor">
	</TextView>
	
	<Button android:text="Restaurar base de datos" android:id="@+id/rbd" 
		android:textStyle="bold" android:textColor="@color/titlecolor" android:onClick="Restaurar"
		android:layout_height="wrap_content" android:layout_marginBottom="15dp"
		android:layout_width="fill_parent"></Button>
	
</LinearLayout>