<?xml version="1.0" encoding="utf-8"?>
<resources>

	<color name="gray">#eaeaea</color>
	<color name="titlebackgroundcolor">#00abd7</color>
	<color name="titlecolor">#666666</color>
	<color name="white">#ffffff</color>
	<color name="textcolor">#999999</color>
	<color name="hr">#d0d0d0</color>
	<color name="yellow">#ffc73e</color>
	
	<style name="Blue">
		<item name="android:windowBackground">@color/gray</item>
		<item name="android:colorBackground">@color/gray</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:textColor">@color/textcolor</item>
	</style>

	<style name="titlebar">
		<item name="android:background">@color/titlebackgroundcolor</item>
	</style>

	<style name="titlebar_text">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:typeface">sans</item>
		<item name="android:text">@string/app_name</item>
		<item name="android:gravity">center</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#005b72</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>

	<style name="header">
		<item name="android:textSize">17sp</item>
		<item name="android:colorBackground">@color/titlebackgroundcolor</item>
		<item name="android:textColor">@color/titlecolor</item>
	</style>

</resources>